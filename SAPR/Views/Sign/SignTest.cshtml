@{
    ViewData["Title"] = "Тестовое подписание";
}
<!DOCTYPE html>

<html>
<head>
    <title>Тестовое подписание</title>
</head>
<body>
    <h3>Тестовое подписание</h3>
    <form method="post" enctype="multipart/form-data" action="~/Sign">
        <div class="form-group">
            <label>Сертификат</label>
            <input type="file" name="file" />
        </div>

        <div class="form-group">
            <label>Подписываемые данные</label>
            <textarea type="string" style="height: 300px;" name="data" class="form-control" rows="3"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Подписать</button>
    </form>
</body>
</html>
