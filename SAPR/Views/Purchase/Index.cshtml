@model IEnumerable<Purchase>
@{ ViewData["Title"] = "Список доступных заявок";
}
<!DOCTYPE html>

<html>
<head>
    <title>Заявки</title>
</head>
<body>
    <h3>Доступные заявки</h3>
    <div>
        <ul class="list-group">
            @foreach (var purchase in Model)
            {
                <a href="/Purchase/CreatePurchase/@purchase.PurchaseId" class="" aria-current="true">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @purchase.Name
                        <span class="badge bg-primary rounded-pill text-white">@purchase.Fields.Count()</span>
                    </li>
                </a>
            }
        </ul>
    </div>
    <h3>Создание ЭЦП</h3>
    <div>
        <a href="/Certificate/" class="" aria-current="true">
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Создание электронной цифровой подписи
            </li>
        </a>
    </div>
    <h3>Подписание</h3>
    <div>
        <a href="/Sign/" class="" aria-current="true">
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Подписание данных
            </li>
        </a>
    </div>
</body>
</html>
