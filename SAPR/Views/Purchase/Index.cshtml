@model IEnumerable<Purchase>
@{ ViewData["Title"] = "Список доступных заявок";
}
<!DOCTYPE html>

<html>
<head>
    <title>Заявки</title>
</head>
<body>
    <h3>Заявкиы</h3>
    <div>
        <ul class="list-group">
            @foreach (var purchase in Model)
            {
                <a href="#" class="" aria-current="true">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @purchase.Name
                        <span class="badge bg-primary rounded-pill">@*@purchase.Fields.Count()*@</span>
                    </li>
                </a>
            }
        </ul>
    </div>
</body>
</html>
