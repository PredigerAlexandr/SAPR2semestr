@model IEnumerable<Purchase>
@{ ViewData["Title"] = "Список доступных заявок";
}
<!DOCTYPE html>

<html>
<head>
    <title>Админ панель</title>
</head>
<body>
    <h3>Администрирование заявок</h3>
    <div>
        <ul class="list-group">
            @foreach (var purchase in Model)
            {
                <a href="/Admin/AdminRules/@purchase.PurchaseId" class="" aria-current="true">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @purchase.Name
                    <span class="badge bg-primary rounded-pill text-white">@purchase.Fields.Count()</span>
                </li>
                </a>
            }
        </ul>
    </div>
    <h3>Генерация сертификата сервера</h3>
    <div>
        <div>
            <span>Статус: @ViewData["mesForCert"]</span>
        </div>
        <form method="post" action="~/Certificate/CreateAdmin">
            <button type="submit" class="btn btn-primary">Сгенерировать</button>
        </form>
    </div>
</body>
</html>